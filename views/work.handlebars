<section>
  <div class="header-image-2">
    <h1 class="text-center mb-15 mt-15">SELECTED WORK</h1>
  </div>
  <div class="container">
    <div class="row g-4">
      {{#each projects}}
      <div class="col-sm-12 col-lg-6 mb-5">
        <a href="/projects/{{this.id}}" class="text-decoration-none">
          <img src="{{getCoverImage this}}" class="img-fluid w-100 rounded-3" style="aspect-ratio: 800/500; object-fit: cover;" alt="{{this.title}}">
          <h5 class="text-white mt-3 mb-0">{{this.title}}</h5>
          <p class="text-white-50 mb-0" style="font-size: 0.9rem;">{{this.slug}}</p>
        </a>
      </div>
      {{/each}}
    </div>
  </div>
</section>